@model Aplication.ViewModel.TypeEditCreateViewModel
@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Save";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>@(editMode ? $"You are edit: {Model.Name}" : "You are creating a new type")</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="TypeOfPokemons" asp-action="EditOCreate">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name: </label>
                            <input asp-for="Name" type="text" class="form-control"/>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
