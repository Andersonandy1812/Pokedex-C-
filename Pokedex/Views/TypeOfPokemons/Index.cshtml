@model List<Aplication.ViewModel.TypeOfPokemonViewModel>
@{
    ViewData["Title"] = "Type Of Pokemon";
}


<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="TypeOfPokemons" asp-action="EditOCreate" class="btn btn-outline-success">Create</a>
        </div>

    </div>
    @if (Model.Count == 0)
    {
        <h2>Dont have types</h2>
    }
    else
    {
        @foreach (Aplication.ViewModel.TypeOfPokemonViewModel item in Model)
        {
            <div class="row">
                <div class="list-group w-auto">
                    <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                        <div class="d-flex gap-2 w-100 justify-content-between">
                            <div>
                                <h6 class="mb-0">Type:</h6>
                                <p class="mb-0 opacity-75">@item.Name</p>

                            </div>

                            <a asp-controller="TypeOfPokemons" asp-action="EditOCreate" class="btn btn-sm btn-outline-info">Edit</a>
                            <a href="#" class="btn btn-sm btn-outline-danger">Delete</a>

                        </div>
                    </a>

                </div>
            </div>

        }
    }



</div>